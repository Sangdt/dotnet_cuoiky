@model DOTNET_CuoiKy.Models.Client.LoginRegisterModel;
@{
    ViewData["Title"] = "Register";
}

<h4 class="text-center">Đăng kí nè bẹn</h4>

<section class="login-block">
    <div class="container container_login">
        <div class="row">
            <div class="col-md-4 login-sec">
                @if (ViewData["UserLoginFailed"] != null)
                {
                    <p class="alert alert-danger">@ViewData["UserLoginFailed"]</p>
                }

                    <form class="register-form" asp-action="Register">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="@Model.NameKh" class="text-uppercase"></label>
                            <input asp-for="@Model.NameKh" class="form-control" />
                            <span asp-validation-for="@Model.NameKh" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="@Model.Address" class="text-uppercase"></label>
                            <input asp-for="@Model.Address" class="form-control" />
                            <span asp-validation-for="@Model.Address" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.userName" class="text-uppercase"></label>
                            <input asp-for="@Model.userName" class="form-control" />
                            <span asp-validation-for="@Model.userName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="passWord" class="text-uppercase"></label>
                            <input asp-for="passWord" class="form-control" />
                            <span asp-validation-for="passWord" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Đăng ký" class="btn btn-default btn-success" />
                        </div>
                    </form>
            </div>
            <div class="col-md-8 banner-sec">
                <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                    </ol>
                    <div class="carousel-inner carousel-inner_login" role="listbox">
                        <div class="carousel-item active">
                            <img class="d-block img-fluid" src="https://static.pexels.com/photos/33972/pexels-photo.jpg" alt="First slide">
