@model IEnumerable<DOTNET_CuoiKy.Models.DB.Sanpham>

@{
    ViewData["Title"] = "Index";
    @addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
}
<h2>THÔNG TIN VỀ MÓN ĂN</h2>

<div class="text-warning">
    @ViewBag.ProError
</div>
<hr />

<p>
    <a asp-action="Create">Tạo món ăn mới</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Tên món ăn
            </th>
            <th>
                Giá
            </th>
            <th>
                Hình 1
            </th>
            <th>
                Hình 2
            </th>
            <th>
                Hình 3
            </th>
            <th>
                hình 4
            </th>
            <th>
                Mô tả
            </th>
            <th>
                Id danh mục
            </th>
            <th>
               Tùy chọn
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenSp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GiaSp)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hinh1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hinh2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hinh3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Hinh4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MoTa)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DanhMucNavigation.IddanhMuc)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.IdsanPham">Edit</a> |
                  
                    <a asp-action="Delete" asp-route-id="@item.IdsanPham">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
